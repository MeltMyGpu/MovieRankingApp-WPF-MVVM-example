<Window x:Class="MovieRankingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRankingApp"
        xmlns:local1="clr-namespace:MovieRankingApp.ViewModels"
        xmlns:Pages="clr-namespace:MovieRankingApp.Views"
        mc:Ignorable="d"

        Title="MainWindow" Height="720" Width="1280">
    <Window.Resources>
        <RadialGradientBrush 
                x:Key="GrayRadial"
                GradientOrigin="0.5,0.5"
                Center="0.5,0.5"
                RadiusX="0.8" RadiusY="0.8">
            <RadialGradientBrush.GradientStops>
                <GradientStop Color="DarkGray" Offset="0" />
                <GradientStop Color="DimGray" Offset="1.0" />
            </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>

    </Window.Resources>
    <Grid>
        <Frame Source="../Views/MovieListPage.xaml" ></Frame>
    </Grid>
    <Window.DataContext>
        <Binding Source="StaticResource VmLocator"/>
    </Window.DataContext>
    
</Window>
