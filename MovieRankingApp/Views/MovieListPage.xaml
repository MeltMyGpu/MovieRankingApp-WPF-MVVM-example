<Page x:Class="MovieRankingApp.Views.MovieListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieRankingApp.Views"
      xmlns:custom="clr-namespace:MovieRankingApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MovieListPage">
    <Page.DataContext>
        <custom:MovieListPageViewModel/>
    </Page.DataContext>
    <Grid>
        <DataGrid x:Name="MovieListDataGrid" ItemsSource="{Binding movieList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="147,401,0,0" VerticalAlignment="Top" Command="{Binding UpdateMovieListDbCommand}"/>

    </Grid>
</Page>
